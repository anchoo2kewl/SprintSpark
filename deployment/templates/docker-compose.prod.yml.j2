# Production Docker Compose for SprintSpark
# Architecture: linux/amd64

services:
  api:
    build:
      context: {{ app_dir }}/source/api
      dockerfile: Dockerfile
      platforms:
        - linux/amd64
    platform: linux/amd64
    container_name: {{ app_name }}-api
    environment:
      DB_PATH: /data/sprintspark.db
      JWT_SECRET: {{ jwt_secret }}
      PORT: 8080
      ENV: production
      CORS_ALLOWED_ORIGINS: https://{{ primary_domain }},https://{{ secondary_domain }}
      LOG_LEVEL: {{ log_level }}
    ports:
      - "127.0.0.1:8081:8080"
    volumes:
      - sprintspark-data:/data
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8080/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    networks:
      - {{ app_name }}-network

  web:
    build:
      context: {{ app_dir }}/source
      dockerfile: web/Dockerfile
      platforms:
        - linux/amd64
    platform: linux/amd64
    container_name: {{ app_name }}-web
    ports:
      - "127.0.0.1:8085:80"
    depends_on:
      api:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped
    networks:
      - {{ app_name }}-network

volumes:
  sprintspark-data:
    driver: local

networks:
  {{ app_name }}-network:
    driver: bridge
